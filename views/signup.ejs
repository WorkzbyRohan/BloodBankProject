<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blood Bank System - Sign Up</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Montserrat', sans-serif; }
    .fade-in { animation: fadeIn 1.2s ease; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(30px);} to { opacity: 1; transform: none; } }
  </style>
</head>
<body class="bg-gradient-to-br from-gray-100 via-red-200 to-gray-300 text-gray-900 min-h-screen flex flex-col">
  <!-- Navbar -->
  <nav class="bg-gradient-to-r from-red-800 via-red-700 to-red-600 text-white p-4 flex justify-between items-center shadow-lg sticky top-0 z-10">
    <div class="text-2xl font-extrabold tracking-wide flex items-center gap-2">
      <span class="inline-block bg-white bg-opacity-10 rounded-full p-1"><svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 1.343-3 3 0 2.5 3 5 3 5s3-2.5 3-5c0-1.657-1.343-3-3-3z"/><circle cx="12" cy="11" r="3"/></svg></span>BloodLink
    </div>
    <div class="space-x-6 text-lg">
      <a href="/index" class="hover:underline transition">Login</a>
      <a href="/signup" class="underline font-bold">Sign Up</a>
    </div>
  </nav>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-red-900 via-red-700 to-gray-200 py-12 flex flex-col items-center justify-center text-center mb-8 fade-in">
    <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1200&q=80" alt="Blood Donation" class="absolute inset-0 w-full h-full object-cover opacity-20 pointer-events-none" />
    <div class="relative z-10">
      <h1 class="text-5xl md:text-6xl font-extrabold mb-4 text-red-100 drop-shadow">Join BloodLink</h1>
      <p class="text-lg md:text-2xl text-gray-100 mb-6 max-w-2xl mx-auto">Sign up to become a donor and <span class="text-red-300 font-bold">make a difference</span> in someone's life today.</p>
    </div>
  </section>
  <!-- Sign Up Form -->
  
  <main class="flex-1 flex flex-col items-center justify-center">
  <div class="bg-white bg-opacity-95 p-10 rounded-3xl shadow-2xl w-full max-w-md fade-in border border-red-200">
    <h2 class="text-3xl font-extrabold mb-6 text-center text-red-800">Sign Up</h2>
    <% if (typeof errorMessage !== 'undefined') { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= errorMessage %></span>
      </div>
    <% } %>
    <form action="/signup" method="POST" class="space-y-5" onsubmit="return validateForm();">
      
      <div>
        <label for="role" class="block font-semibold mb-1">Role</label>
        <select id="role" name="role" required class="w-full border-2 border-red-300 rounded px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-red-600">
          <option value="">Select Role</option>
          <option value="patient">Patient</option>
          <option value="donor">Donor</option>
        </select>
      </div>

      <div>
        <label for="name" class="block font-semibold mb-1">Full Name</label>
        <input type="text" id="name" name="name" placeholder="Enter Full Name" required class="w-full border-2 border-red-300 rounded px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-red-600">
      </div>

      <div>
        <label for="ssn" class="block font-semibold mb-1">SSN (14 digits)</label>
        <input type="text" id="ssn" name="ssn" pattern="\d{14}" placeholder="Enter SSN" required class="w-full border-2 border-red-300 rounded px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-red-600">
      </div>

      <div>
        <label for="contact" class="block font-semibold mb-1">Contact No</label>
        <input type="text" id="contact" name="contact" pattern="03\d{2}-\d{7}" placeholder="03XX-XXXXXXX" required class="w-full border-2 border-red-300 rounded px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-red-600">
      </div>

      <div>
        <label for="bloodType" class="block font-semibold mb-1">Blood Type</label>
        <select id="bloodType" name="bloodType" required class="w-full border-2 border-red-300 rounded px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-red-600">
          <option value="">Select Blood Type</option>
          <option value="A+">A+</option>
          <option value="A-">A-</option>
          <option value="B+">B+</option>
          <option value="B-">B-</option>
          <option value="AB+">AB+</option>
          <option value="AB-">AB-</option>
          <option value="O+">O+</option>
          <option value="O-">O-</option>
        </select>
      </div>

      <div>
        <label for="gender" class="block font-semibold mb-1">Gender</label>
        <select id="gender" name="gender" required class="w-full border-2 border-red-300 rounded px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-red-600">
          <option value="">Select Gender</option>
          <option value="M">Male</option>
          <option value="F">Female</option>
        </select>
      </div>

      <div>
        <label for="password" class="block font-semibold mb-1">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter Password" required class="w-full border-2 border-red-300 rounded px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-red-600">
      </div>

      <div>
        <label for="confirmPassword" class="block font-semibold mb-1">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required class="w-full border-2 border-red-300 rounded px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-red-600">
      </div>

      <div class="flex justify-between mt-6">
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-xl shadow transition-all duration-200">Sign Up</button>
        <a href="/index" class="text-gray-600 font-semibold hover:underline self-center">Back to Login</a>
      </div>
    </form>
  </div>
</main>

  <!-- Footer -->
  <footer class="bg-gradient-to-r from-red-900 via-red-700 to-gray-200 text-gray-100 text-center py-4 mt-12 border-t shadow-inner">
    <span class="font-semibold">&copy; 2025 BloodLink. All rights reserved.</span>
  </footer>

  <!-- Validation Script -->
  <script>
    function validateForm() {
      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirmPassword').value;
      const ssn = document.getElementById('ssn').value;
      const contact = document.getElementById('contact').value;
      const role = document.getElementById('role').value;

      // Check if passwords match
      if (password !== confirmPassword) {
        alert('Passwords do not match!');
        return false;
      }

      // Validate SSN format (14 digits)
      if (!/^\d{14}$/.test(ssn)) {
        alert('SSN must be exactly 14 digits!');
        return false;
      }

      // Validate contact number format (03XX-XXXXXXX)
      if (!/^03\d{2}-\d{7}$/.test(contact)) {
        alert('Contact number must be in format 03XX-XXXXXXX!');
        return false;
      }

      // Check if role is selected
      if (!role) {
        alert('Please select a role!');
        return false;
      }

      return true;
    }
  </script>
</body>
</html>
