        <div class="space-x-6 text-lg">
            <a href="/donor/donor" class="hover:underline transition">Dashboard</a>
            <a href="/donor/track-record" class="hover:underline transition">Track Record</a>
            <a href="/donor/notifications" class="hover:underline transition">Notifications</a>
            <a href="/donor/benefits" class="underline font-bold">Earn Benefits</a>
            <a href="/index" class="ml-4 hover:underline transition">Logout</a>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-red-900 via-red-700 to-gray-200 py-12 flex flex-col items-center justify-center text-center mb-8 fade-in">
        <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1200&q=80" alt="Blood Donation" class="absolute inset-0 w-full h-full object-cover opacity-20 pointer-events-none" />
        <div class="relative z-10">
            <h1 class="text-5xl md:text-6xl font-extrabold mb-4 text-red-100 drop-shadow">Earn Exclusive Benefits</h1>
