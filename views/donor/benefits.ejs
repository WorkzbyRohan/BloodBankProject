        </div>
    </section>

    <!-- Content -->
    <main class="flex-1 p-6 max-w-4xl mx-auto w-full">
        <h2 class="text-2xl font-bold mb-8 text-center text-red-800">Your Benefits</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 fade-in">
            <div class="bg-white bg-opacity-95 p-6 rounded-2xl shadow-lg flex items-center space-x-4 hover:scale-105 hover:shadow-2xl transition border border-red-200">
                <div class="bg-red-100 p-3 rounded-full">
                    <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 1.343-3 3 0 2.5 3 5 3 5s3-2.5 3-5c0-1.657-1.343-3-3-3z"/>
                        <circle cx="12" cy="11" r="3"/>
                    </svg>
                </div>
                <div>
                    <h3 class="font-bold text-lg text-red-800">10% Off at ABC Pharmacy</h3>
                    <p class="text-gray-600">Available after 3 donations</p>
                </div>
            </div>
            <div class="bg-white bg-opacity-95 p-6 rounded-2xl shadow-lg flex items-center space-x-4 hover:scale-105 hover:shadow-2xl transition border border-red-200">
